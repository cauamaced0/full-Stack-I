<script src="/js/usuario/listar.js"></script>

<h1>Usuários cadastrados</h1>

<div>
    <a class="btn btn-primary" href="/usuario/cadastrar">Novo usuário</a>

    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ativo</th>           
                    <th>Perfil</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i<usuarios.length; i++) { %>
                    <tr>
                        <td><%= usuarios[i].usuarioId %></td>
                        <td><%= usuarios[i].usuarioNome %></td>
                        <td><%= usuarios[i].usuarioEmail %></td>
                        <td><%= usuarios[i].usuarioAtivo %></td>
                        <td><%= usuarios[i].perfilDescricao %></td>
                        <td>
                            <button data-id="<%= usuarios[i].usuarioId %>" class="btn btn-danger btnExcluir"><i class="fas fa-trash"></i></button>
                            <a href="/usuario/alterar/<%= usuarios[i].usuarioId %>" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

